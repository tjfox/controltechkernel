		interface_pix_fmt = "RGB666";
#else
		interface_pix_fmt = "RGB24";
#endif
		default_bpp = <16>;
		int_clk = <0>;
		late_init = <0>;
		status = "disabled";
	};

	mxcfb2: fb@1 {
		compatible = "fsl,mxc_sdc_fb";
		disp_dev = "hdmi";
