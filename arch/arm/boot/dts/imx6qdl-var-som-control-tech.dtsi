&iomuxc {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hog_1>;

	hog {
		pinctrl_hog_1: hoggrp-1 {
			fsl,pins = <
				/* CTW6120 IRQ */
				//MX6QDL_PAD_EIM_DA7__GPIO3_IO07 		0x80000000

				/* Touch */
				/* for Bluetooth/wifi enable */

				/* SDMMC1 CD */
				MX6QDL_PAD_CSI0_DAT15__GPIO6_IO01		0x80000000 //#define VAR_SOM_SD1_CD          IMX_GPIO_NR(6, 1)
				/* SDMMC2 CD */
				MX6QDL_PAD_CSI0_DAT17__GPIO6_IO03		0x80000000 //#define VAR_SOM_SD2_CD          IMX_GPIO_NR(6, 3)

				/* USBOTG ID pin */
//				MX6QDL_PAD_GPIO_4__GPIO1_IO04			0x80000000
				/* PMIC INT */
				MX6QDL_PAD_GPIO_17__GPIO7_IO12			0x80000000
				/* Wifi Slow Clock */
				MX6QDL_PAD_ENET_RXD0__OSC32K_32K_OUT		0x000b0			/* WIFI Slow clock */
				/* Audio Clock */
				MX6QDL_PAD_GPIO_0__CCM_CLKO1 			0x130b0			/* Audio Codec Clock */
				/* Camera Clock */
				MX6QDL_PAD_GPIO_3__CCM_CLKO2			0x130b0			/* Camera MCLK */

				/* Set GPIO5[31] to pull-up state */
				MX6QDL_PAD_CSI0_DAT13__GPIO5_IO31		(3 << 14)		 /* Set to pull-up (PAD_CTL_PUS_22K_UP) state */
			>;
		};
